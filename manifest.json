{
  "manifest_version": 3,
  "name": "Flow Facilitator",
  "version": "1.0.0",
  "description": "AI-driven flow state detection and productivity assistant.",

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "*://*.youtube.com/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "src/service_worker.js",
    "type": "module"
  },

  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Flow Facilitator"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content_script.js"],
      "css": ["src/overlay.css"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
