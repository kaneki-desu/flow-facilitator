{
  "manifest_version": 3,
  "name": "Flow Facilitator - AI Focus",
  "version": "1.0",
  "description": "AI-powered flow state guardian. Analyzes YouTube productivity and blocks distractions.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "https://api.groq.com/*",
    "https://*.youtube.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png", 
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css","assets/models/*","libs/*"],
      "matches": ["<all_urls>"]
    }
  ]
}